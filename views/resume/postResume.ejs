<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    
    <!--css-->
    <!--css-->
    <link rel='stylesheet' href='/css/style.css' />
    <link rel='stylesheet' href='/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/css/bootstrap-responsive.min.css' />
  </head>
  <body>
    
  <div class="container">
      <% if( success ) { %>
        <div class="alert alert-success"> <%=success%> </div>
      <% } %>
      <% if(error) { %>
        <div class="alert alert-error"> <%=error%> </div>
      <% } %> 

      <h2>我要求职</h2>
      <hr>
      <div class="tabbable tabs-left">
              
              <ul class="nav nav-tabs">
                <li class="active"><a href="#onlineresume" data-toggle="tab">发送在线简历</a></li>
                <li class=""><a href="#resumefile" data-toggle="tab">发送简历附件</a></li>
              </ul>

              <div class="tab-content">
                <div class="tab-pane active" id="onlineresume">
                  <form class="form-horizontal" action="/resume/post" method="post">
                  <div class="control-group">
                              <label class="control-label">姓名</label>
                              <div class="controls">
                               <input type="text" class="input-block-level" name="title" placeholder="Noder" required=true>
                              </div>
                  </div>
                  <div class="control-group">
                              <label class="control-label">邮箱</label>
                              <div class="controls">
                               <input type="text" class="input-block-level" name="title" placeholder="Noder" required=true>
                             </div>
                  </div>

                  <hr>
                  <div class="form-actions">
                                <input type="submit" name="submit" value="投递" class="btn btn-primary btn-large">
                  </div>
                </form>
                </div>
                <div class="tab-pane" id="resumefile">
                  <form class="form-horizontal" action="/resume/post" method="post">

                  <div class="control-group">
                              <label class="control-label">给简历取个标题</label>
                              <div class="controls">
                               <input type="text" class="input-block-level" name="title" placeholder="Noder" required=true>
                              </div>
                  </div>
                  <div class="control-group">
                              <label class="control-label">简历说明</label>
                              <div class="controls">
                               <input type="text" class="input-block-level" name="title" placeholder="Noder" required=true>
                              </div>
                  </div>
                  <div class="control-group">
                              <label class="control-label">简历附件</label>
                              <div class="controls">
                                <a  href='#'>上传附件</a>
                  </div>
                  
                  <hr>
                  <div class="form-actions">
                                <input type="submit" name="submit" value="投递" class="btn btn-primary btn-large">
                  </div>
                </form>
                  </div>
                </div>
              </div>
      </div>

    </div> <!-- /container -->

     <!--js-->
    <script type="text/javascript" src="/js/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    
  </body>
</html>
