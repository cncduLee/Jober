<div class="main-body">

  <div class='panel'>
    <div class='header'>
      <span class='col_fade'><i class="icon-time"></i><%=currentUser.name%>发布的职位</span>
    </div>
      <% jobs.forEach(function(job,index){%>
        <div class='cell'>
                  <a> <%=job.title %></a>
                  <a class="count fr" href="/job/ <%=job._id %>"><%=job.click_count%></a> 

                  <div class="sep10"></div>
                  <p><strong>岗位需求：</strong> <%-job.requirements %> </p>
                  <div class="sep5"></div>

                  <span class="col_fade" style="color:#aaa;"> 
                    <%=job.click_count %>点击&nbsp;&nbsp;
                    <%=job.coment_count %>回复 &nbsp;&nbsp;&nbsp;
                    <%=job.ask_count %>申请 &nbsp;&nbsp;&nbsp;
                  </span>    
                  <div class="sep5"></div>
                  <a href="/job/ <%=job._id %> ">查看详情 &raquo;</a>
        </div> 
      <% }) %>
  </div>

</div>

<div class="side_span">
  <% if(user){if(user._id == currentUser._id){%>
    <div class='user_card' id='user_card'>
      <div class='user_card_left'>
        <h1><a href="#"></a></h1>
        <p><a href="#">粉丝： <span>0</span>个</a></p>
        <p><a href="#">关注： <span>0</span>人</a></p>
      </div>
      <div class='user_card_right'>
          <a href="/u/<%=currentUser._id%>" title="a" class="img x">
            <img style="width:70px;" src="<%=currentUser.avatar_url%>">
          </a>  
      </div>
    </div>
    <div class='header'>
      <span class='col_fade'>您是企业用户吗？</span>
    </div>
    <div class="inner textCenter">
      <a href="/job" class="btn btn-info"><i class="icon-pencil icon-white"></i>发布新职位</a>
    </div>
  <%}else{%>
    <div class='header'>
      <span class='col_fade'>和他/她建立联系</span>
    </div>
    <div class="inner textCenter">
      <%if(relation != null){%>
        <a href="/u/unfollow/<%=currentUser._id%>" class="btn btn-info"><i class="icon-pencil icon-white"></i>取消关注</a>
      <%}else{%>
        <a href="/u/follow/<%=currentUser._id%>" class="btn btn-info"><i class="icon-pencil icon-white"></i>加关注</a>
      <%}%>
      
    </div>
  <%}}else{%>
    <div class='header'>
      <span class='col_fade'>登录乐享使用更多功能</span>
    </div>
    <div class='inner textCenter'>
      <a href="/login" class="btn btn-info"><i class="icon-user icon-white"></i> 登录</a>
    </div>
  <%}%>
</div>
